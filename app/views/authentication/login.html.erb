<% if not flash[:notice].nil? %>
	<p class="flash notice">
		<%= flash[:notice] %>
	</p>
<% end %>

<div class="form"> 
	<h2><span>Got an account!</span></h2>
	<p>
		Already got an account? Use your user credentials to login below.
	</p>

	<form action="/authenticate" method="post" autocomplete="off">
		<fieldset>

			<% if not flash[:alert].nil? %>
				<p class="flash alert">
					<%= flash[:alert] %>
				</p>
			<% end %>

			<div class="field">
				<label for="name">Name</label>
				<input type="text" name="name" id="name" value="" />
			</div>
			<div class="field">
				<label for="pin">PIN-code</label>
				<input type="text" name="pin" id="pin" value="" placeholder="Vul je pincode in" />
			</div>
			<div class="buttoncontainer">
				<button type="submit">Login</button>
			</div>
		</fieldset>
	</form>
</div>

<div class="no-account">
	<div class="form">
		<h2><span>Need an account &hellip;</span></h2>
		<p>
			If you haven't got an account yet make sure to create one first. I'll mail you a PIN-code you can use
			in the form above.
		</p>

		<form action="/request_pin" method="post" autocomplete="off">
			<fieldset>

				<div class="field">
					<label for="name">Name</label>
					<input type="text" name="name" id="name" value="" placeholder="Naam" />
				</div>
				<div class="field">
					<label for="email">E-mail</label>
					<input type="email" name="email" id="email" value="" placeholder="Vul je e-mail adres in" />
				</div>
				<div class="buttoncontainer">
					<button type="submit">Register</button>
				</div>
			</fieldset>
		</form>


	</div>
</div>
